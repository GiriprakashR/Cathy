#!/usr/bin/env python
"""Cathy.

Discord chat bot using AIML artificial intelligence

Usage:
  ava <channel> <token> <logfile> <database>

Options:
  <channel>     Name of channel to chat in. E.g. "general"
  <token>       Bot's Discord API token
  <logfile>     Path to log file. E.g. "$HOME/ava.log"
  <database>    Path to database file. E.g. "$HOME/ava.sqlite"
  -h --help     Show this screen.
"""

from docopt import docopt
from ava.ava import Ava

args = docopt(__doc__)

print('Channel: %s' % args['<channel>'])
print('Token: %s' % args['<token>'])
print('Log file: %s' % args['<logfile>'])
print('Database: %s' % args['<database>'])

bot = Ava(args['<channel>'], args['<token>'], args['<logfile>'], args['<database>'])
bot.run()
